<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myDarkBlue"
        android:paddingBottom="20dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="56dp"
            android:alpha=".4"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_thin"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableLeftCompat="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_img_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/pg"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
            app:layout_constraintStart_toStartOf="@id/tv_back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/movieName"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="@id/tv_pg"
            app:layout_constraintTop_toBottomOf="@id/tv_pg"
            app:layout_constraintWidth_percent=".6" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_thin"
            android:text="@string/movieTags"
            android:textColor="@color/myPink"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/myProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="4"
            android:progressDrawable="@drawable/custom_rating_bar"
            app:layout_constraintStart_toStartOf="@id/tv_tags"
            app:layout_constraintTop_toBottomOf="@id/tv_tags" />

        <TextView
            android:id="@+id/tv_storyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Storyline"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/tv_tags" />

        <TextView
            android:id="@+id/tv_movieAnnotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_thin"
            android:lineHeight="20dp"
            android:text="@string/movieAnnotation"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_storyline"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            app:layout_constraintTop_toBottomOf="@id/tv_storyline" />

        <TextView
            android:id="@+id/tv_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Cast"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_movieAnnotation"
            />

        <ImageView
            android:id="@+id/iv_actor_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/robert_downey"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_actor_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="@id/tv_cast"
            app:layout_constraintTop_toBottomOf="@id/tv_cast" />

        <ImageView
            android:id="@+id/iv_actor_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/evans"
            app:layout_constraintEnd_toStartOf="@+id/iv_actor_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/iv_actor_1"
            app:layout_constraintTop_toTopOf="@id/iv_actor_1" />

        <ImageView
            android:id="@+id/iv_actor_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ruffalo"
            app:layout_constraintEnd_toStartOf="@+id/iv_actor_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/iv_actor_2"
            app:layout_constraintTop_toTopOf="@id/iv_actor_1" />

        <ImageView
            android:id="@+id/iv_actor_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hemsworth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/iv_actor_3"
            app:layout_constraintTop_toTopOf="@id/iv_actor_1" />

        <TextView
            android:id="@+id/tv_actor_1_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/actor_1_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_actor_2_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_actor_1" />

        <TextView
            android:id="@+id/tv_actor_2_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/actor_2_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_actor_3_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/tv_actor_1_name"
            app:layout_constraintTop_toBottomOf="@id/iv_actor_2" />

        <TextView
            android:id="@+id/tv_actor_3_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/actor_3_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_actor_4_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/tv_actor_2_name"
            app:layout_constraintTop_toBottomOf="@id/iv_actor_3" />

        <TextView
            android:id="@+id/tv_actor_4_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/actor_4_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/tv_actor_3_name"
            app:layout_constraintTop_toBottomOf="@id/iv_actor_4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>