<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="14dp" />

    <TextView
        android:id="@+id/movie_list_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:text="@string/movie_list_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/app_logo_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo"
        app:layout_constraintBottom_toBottomOf="@id/movie_list_title_text"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/movie_list_title_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/movie_card_rounded_rectangle"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/movie_list_title_text">

        <ImageView
            android:id="@+id/movie_card_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_card_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_genre_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/movie_genre"
            android:textColor="@color/pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/rating_star_1_image"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/movie_card_reviews_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/rating_star_1_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toTopOf="@id/movie_card_title"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/rating_star_2_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toTopOf="@id/movie_card_title"
            app:layout_constraintStart_toEndOf="@id/rating_star_1_image"
            />

        <ImageView
            android:id="@+id/rating_star_3_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toTopOf="@id/movie_card_title"
            app:layout_constraintStart_toEndOf="@id/rating_star_2_image"
            />

        <ImageView
            android:id="@+id/rating_star_4_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toTopOf="@id/movie_card_title"
            app:layout_constraintStart_toEndOf="@id/rating_star_3_image"
            />

        <ImageView
            android:id="@+id/rating_star_5_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toTopOf="@id/movie_card_title"
            app:layout_constraintStart_toEndOf="@id/rating_star_4_image"
            app:tint="@color/light_gray" />

        <TextView
            android:id="@+id/movie_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Avengers: End Game"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/movie_card_image" />

        <TextView
            android:id="@+id/movie_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="137 min"
            android:textColor="@color/light_gray"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/movie_card_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>